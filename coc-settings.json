{
    "npm.binPath": "npm",
    "coc.preferences.formatOnSave": true,
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.work",
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true,
            }
        },
    },
    "colors.enable": true
}
