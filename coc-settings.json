{
    "npm.binPath": "yarn",
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPattern": [
                "go.mod"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "go"
            ]
        },
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "Markdown",
        "javascript",
        "html",
        "less",
        "sass",
        "js",
        "php",
        "vue",
        "go",
        "lua",
        "json"
    ],
}
